<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Title">
        <item name="android:fontFamily">@font/jersey25_regular</item>
        <item name="fontFamily">@font/jersey25_regular</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">@color/foreground_color</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Content">
        <item name="android:fontFamily">@font/jersey25_regular</item>
        <item name="fontFamily">@font/jersey25_regular</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">@color/foreground_color</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.CpuDefense.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/jersey25_regular</item>
        <item name="fontFamily">@font/jersey25_regular</item>
        <item name="android:textColor">@color/foreground_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:backgroundTint">@color/button_color</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Widget.CpuDefense.Button.Danger" parent="Widget.CpuDefense.Button">
        <item name="android:backgroundTint">@color/button_danger_color</item>
    </style>

    <style name="Widget.CpuDefense.Button.Title" parent="Widget.CpuDefense.Button">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Widget.CpuDefense.RetroSwitch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:fontFamily">@font/jersey25_regular</item>
        <item name="fontFamily">@font/jersey25_regular</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="trackTint">@color/switch_track_color</item>
        <item name="thumbTint">@color/foreground_color</item>
        <item name="android:textColor">@color/foreground_color</item>
        <item name="android:background">@color/background_tertiary_color</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.CpuDefense.Tab" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.CpuDefense.Tab</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPadding">16dp</item>
        <item name="tabTextColor">@color/foreground_color</item>
        <item name="tabSelectedTextColor">@color/foreground_color</item>
        <item name="tabBackground">@drawable/ui_tab_background_selector</item>
    </style>

    <style name="TextAppearance.CpuDefense.Tab" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:fontFamily">@font/jersey25_regular</item>
        <item name="fontFamily">@font/jersey25_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/foreground_color</item>
    </style>


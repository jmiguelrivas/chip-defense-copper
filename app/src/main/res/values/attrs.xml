<resources>
    <!-- Shared attributes -->
    <attr name="icon" format="reference" />
    <attr name="text" format="string" />
    <attr name="url" format="string" />

    <declare-styleable name="IconLink">
        <attr name="icon" />
        <attr name="text" />
        <attr name="url" />
    </declare-styleable>

    <declare-styleable name="IconBadge">
        <attr name="icon" />
        <attr name="text" />
    </declare-styleable>

    <attr name="coinBase" format="color" />
    <attr name="coinOutline" format="color" />
    <attr name="coinShadow" format="color" />
    <attr name="coinMidTone" format="color" />
    <attr name="coinHighlight" format="color" />

    <attr name="chipBase" format="color" />
    <attr name="chipShadow" format="color" />
    <attr name="chipMidTone" format="color" />
    <attr name="chipHighlight" format="color" />

</resources>


